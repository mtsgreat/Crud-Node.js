<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="col-lg-2"></div>

<div class="col-lg-12 my-5 px-md-5">
  <h1 class="text-center">Criar conta ou entrar</h1>
  <p class="text-center lead">Faça login ou crie a sua conta abaixo.</p>
  <div class="row">
    <div class="col-lg">
      <h4>Faça seu cadastro</h4>
      <p>Nao tem conta? cadastre-se agora</p>
      <form action="/login/register" method="post">
        <input type="hidden" name="_csrf" value="<%" ="csrfToken%" />>
        <div class="form-group">
          <label>Seu e-mail</label>
          <input type="email" class="form-control" name="email" />
        </div>
        <div class="form-group">
          <label>Sua senha</label>
          <input type="password" class="form-control" name="senha" />
        </div>
        <button type="submit" class="btn btn-primary my-2">
          Criar minha conta
        </button>
      </form>
    </div>
    <div class="col-lg">
      <h4>Faça seu login</h4>
      <p>Já tem conta? faça login abaixo</p>
      <form action="/login/login" method="post">
        <input type="hidden" name="_csrf" value="<%" ="csrfToken%" /> >
        <div class="form-group">
          <label>Seu e-mail</label>
          <input type="email" class="form-control" name="email" />
        </div>
        <div class="form-group">
          <label>Sua senha</label>
          <input type="password" class="form-control" name="senha" />
        </div>
        <button type="submit" class="btn btn-primary my-2">Entrar</button>
      </form>
    </div>
  </div>
</div>

<div class="col-lg-2"></div>

